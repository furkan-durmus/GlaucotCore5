@model Web.Models.Doctor.DoctorAddMedicineViewModel
@{
    ViewData["Title"] = "AddMedicine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <style>
        .col-form-label {
            margin-bottom:20px !important;
        }

        .form-div{
            margin-bottom:20px !important;
        }
    </style>
}

@using (Html.BeginForm("AddMedicine", "Doctor", FormMethod.Post))
{
    <div class="card" style="max-width:100%;">
        <div class="card-header">
            <h3>Add Medicine</h3>
        </div>
        <div class="card-body">
            <div class="input-group my-1">
                <label for="medicineName" class="col-sm-2 mt-2 col-form-label" style="font-weight:bold;">Medicine Name</label>
                <div class="form-div col-sm-5">
                    <input type="text" class="form-control" id="medicineName" asp-for="MedicineName" placeholder="Medicine Name" style="width: 97% !important;">
                </div>
                <div class="col-12 mb-0">
                    <span asp-validation-for="MedicineName" class="text-danger mt-1 offset-2 d-inline-block"></span>
                </div>
            </div>
            <div class="text-start">
                <button type="submit" class="btn btn-warning offset-6">Save</button>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('.medicine').addClass("active");
            var result = "@TempData["Result"]";
            if(result != null && result != "") {
                console.log(result);
                if(result == "success") {
                    Swal.fire({
                        position: 'top-center',
                        icon: 'success',
                        title: 'Medicine has been saved',
                        showConfirmButton: true,
                        timer: 2500
                    });
                }
                else{
                    Swal.fire({
                        position: 'top-center',
                        icon: 'error',
                        title: 'Error',
                        text: 'Something went wrong!',
                        timer: 2500
                    });
                }
            }
        });

    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}